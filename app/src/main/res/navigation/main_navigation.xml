<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/mainFragment"
    tools:ignore="UnusedNavigation">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mohamed.weatherapptask.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_homeFragment_to_AddNewFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.mohamed.weatherapptask.ui.addNewPhotoWeather.view.AddWeatherFragment"
        android:label="fragment_details"
        tools:layout="@layout/add_weather_fragment" />

</navigation>